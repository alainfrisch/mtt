/* Flattening */

expr FlattenAux =
  if Copy in Atom then (Copy,accu)
  else let accu = >FlattenAux in <FlattenAux

expr Flatten =
  let accu = 0 in FlattenAux

infer Flatten in (1,(2,(3,0)))

